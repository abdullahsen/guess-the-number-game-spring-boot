<thlogic>
    <attr sel="#game-title"
          th:text="#{game.title}"/>
    <attr sel="#game-title-caption"
          th:text="#{game.title}"/>
    <attr sel="#game-over"
          th:text="#{game.over}"/>
    <attr sel="#headId"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#result-message"
          th:text="${__${T(com.iafnstudios.util.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#game-restart"
          th:href="@{__${T(com.iafnstudios.util.GameMappings).RESTART}__}" th:text="#{game.restart}"/>
    <attr sel="#game-home"
          th:href="@{__${T(com.iafnstudios.util.GameMappings).HOME}__}" th:text="#{game.home}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}"/>
</thlogic>